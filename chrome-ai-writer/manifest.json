{
  "manifest_version": 3,
  "name": "AI Writing Assistant",
  "version": "1.2.1",
  "description": "A floating AI chat dialog for any text field or selection, with quick actions like rephrase, translate, and more.",
  "permissions": ["storage", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
